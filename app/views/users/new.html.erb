<nav class="navbar navbar-default">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
  </div>
  <a href="/" class="navbar-brand">Minecraft Communities</a>

  <%= link_to 'Sign In', sign_in_path, class: 'btn btn-success navbar-btn navbar-right' %>
  <%= link_to 'Sign Up', sign_up_path, class: 'btn btn-default navbar-btn navbar-right' %>
</nav>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="page-header">
      <h1>Sign Up</h1>
    </div>
    <%= form_for @user, role: 'form' do |f| %>
    <div class="row">
      <div class="col-md-6">
        <%= f.text_field :username, class: 'form-control', placeholder: 'Username' %>
      </div>
      <div class="col-md-6">
        <%= f.text_field :email, class: 'form-control', placeholder: 'E-Mail' %> <br/>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
      </div>
      <div class="col-md-6">
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password Confirmation' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-8">
        <%= f.submit 'Sign Up', class: 'btn btn-success' %>
        <%= link_to 'Cancel', root_path %>
      </div>
    </div>
    <% end %>
  </div>
</div>